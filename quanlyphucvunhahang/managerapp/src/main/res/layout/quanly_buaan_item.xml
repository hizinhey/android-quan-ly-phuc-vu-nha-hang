<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:elevation="25dp"
    android:background="@drawable/border_with_shadow"
    android:padding="10dp">

    <TextView
        android:id="@+id/lbl_ten_quanly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/lbl_banAn_quanly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_ten_quanly"
        android:layout_alignParentStart="true"
        android:text="TextView" />
    <TextView
        android:id="@+id/lbl_soMon_quanly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_banAn_quanly"
        android:layout_alignParentStart="true"
        android:text="TextView" />
    <TextView
        android:id="@+id/lbl_trangthai_quanly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_soMon_quanly"
        android:layout_alignParentStart="true"
        android:text="TextView" />
    <Button
        android:id="@+id/btn_xacnhan_quanly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn_chitiet_quanly"
        android:text="Hoàn tất"/>
    <Button
        android:id="@+id/btn_chitiet_quanly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:text="Chi tiết"/>

</RelativeLayout>